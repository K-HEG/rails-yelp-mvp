<div class="container mt-5">
  <h2><%= @restaurant.name %></h2>
  <hr>
  <p>🌍<strong> Category:</strong>
    <% if @restaurant.category == 'chinese' %>
    <%= '🇨🇳' %>
    <% elsif @restaurant.category == 'italian' %>
    <%= '🇮🇹' %>
    <% elsif @restaurant.category == 'japanese' %>
    <%= '🇯🇵' %>
    <% elsif @restaurant.category == 'french' %>
    <%= '🇫🇷' %>
    <% elsif @restaurant.category == 'belgian' %>
    <%= '🇧🇪' %>
    <% end %>
  </p>
  <p>☎️<strong> Phone number:</strong> <%= @restaurant.phone_number %></p>
  <p>📍<strong> Address: </strong><%= @restaurant.address %></p>
  <hr>
  <p>⭐️<strong> Reviews</strong></p>
  <% @restaurant.reviews.each do |review| %>
  <p><%= '⭐️' * review.rating.to_i %><br>"<%= review.content %>" - anonymous</p>
  <% end %>
  <br>
  <p><strong>✏️ Write review</strong></p>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
  <% end %>
  <hr>
   <%= link_to 'Return to restaurants', restaurants_path, class: "btn btn-primary" %>
</div>
